extends base.pug

block scripts
  script(src='/static/script.js')

block style
    style
        include ../static/style.css  
        include ../static/StyleContact.css  
block content
    div#contact
        h1.center Contact Us
        form(action="/contact", method="post" Class="form-control")
            input(type="text", name="name" placeholder="Your Name*" required)
            input(type="mail", name="Email" placeholder="Your E-mail*" required)
            input(type="number", name="Age" placeholder="Your Age*" required)
            input(type="tel", name="phoneNumber" placeholder="Your Phone number*" required)
            input(type="text", name="address" placeholder="Your Address*" required)
            Button.btn
                p Dance Now